@model MovieBorrower.Models.Movie

@{
    ViewData["Title"] = "Borrow";
}

<h2>Borrow @Model.Title?</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="Id" />
            <input type="hidden" asp-for="Title" value="@Model.Title" />
            <input type="hidden" asp-for="PosterPath" value="@Model.PosterPath" />
          
            <p>
                If you would like to borrow @Model.Title ,
            </p>
            <p>
                please pick it up by @DateTime.Now.AddDays(5).Date.
            </p>
            <p>
                The Movie would be due back to by @DateTime.Now.AddDays(30).Date.
            </p>
            <p>
                If you agree to this, Click the button below!
            </p>
            <div class="form-group">
                <input style="background:none; color:white" class="btn btn-default btn-lg col-md-3" type="submit" value="Borrow" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Movie" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}